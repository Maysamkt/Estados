<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="373dp"
        android:layout_height="264dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/bandeira_acre"
        android:transitionName="@string/transition_key" />

    <TextView
        android:id="@+id/tNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="16sp"
        android:transitionName="@string/transition_nome" />

    <TextView
        android:id="@+id/tCapital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="Capital: "
         />

    <TextView
        android:id="@+id/tPopulacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="População: " />

    <TextView
        android:id="@+id/tRegiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Região:"
        android:textColor="#000000"
        android:textSize="16sp" />


</LinearLayout>